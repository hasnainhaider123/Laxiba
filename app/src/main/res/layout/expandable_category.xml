<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:paddingRight="@dimen/selection_item_horizontal_padding"
              android:paddingLeft="@dimen/selection_item_horizontal_padding"
              android:paddingTop="@dimen/selection_item_vertical_padding"
              android:paddingBottom="@dimen/selection_item_vertical_padding"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/selection_text_size"
        android:layout_toRightOf="@id/arrow"
        android:paddingLeft="8dp"
        android:textColor="@android:color/white"
        />

</RelativeLayout>